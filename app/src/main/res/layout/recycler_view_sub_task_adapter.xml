<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:id="@+id/line_color"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:stroke_width="1dp"
            app:small_tick="true"
            app:duration="200"
            android:layout_gravity="center"
            app:color_checked="@color/purple"
            app:color_tick="@color/white"
            app:color_unchecked_stroke="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/checkbox_main"
            android:layout_toRightOf="@+id/line_color"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Title"
            android:id="@+id/txt_main"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/checkbox_main"
            />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_task"
            app:tint="@color/red" />

    </LinearLayout>
</LinearLayout>